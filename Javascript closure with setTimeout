for(var i = 0; i < 5; i++) {
  setTimeout(function(){
    console.log(i);
  },1000);
}

<h5>
  output is "5,5,5,5,5" because of setTimeout function and global scope of "var" keyword
</h5>

for(let i = 0; i < 5; i++) {
  setTimeout(function(){
    console.log(i);
  },1000);
}

<h5>
  output is "0,1,2,3,4" because of setTimeout function and block scope of "let" keyword
</h5>
